{
  "manifest_version": 3,
  "name": "Claude Assistant",
  "version": "1.1.0",
  "description": "ページ情報をClaudeに送信するためのアシスタント（APIキー不要）",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Claude Assistant"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "history",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
