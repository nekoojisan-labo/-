{
  "manifest_version": 3,
  "name": "Claude Assistant",
  "version": "1.0.0",
  "description": "Claude AIでページ分析、Chrome管理、情報検索を行うアシスタント",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Claude Assistant"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "history",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
